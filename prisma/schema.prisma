generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id                 BigInt   @id @default(autoincrement())
  idUsuario          BigInt
  dataHoraCadastro   DateTime @default(now())
  codigo             String   @db.VarChar(15)
  nome               String   @db.VarChar(150)
  cpfCnpj            String   @db.VarChar(20)
  cep                Int
  logradouro         String   @db.VarChar(100)
  endereco           String   @db.VarChar(120)
  numero             String   @db.VarChar(20)
  bairro             String   @db.VarChar(50)
  cidade             String   @db.VarChar(60)
  uf                 String   @db.VarChar(2)
  complemento        String?  @db.VarChar(150)
  fone               String   @db.VarChar(15)
  limiteCredito      Float
  validade           DateTime @db.Date

  @@map("clientes")
}
